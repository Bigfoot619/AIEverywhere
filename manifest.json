{
    "manifest_version": 3,
    "name": "AIEverywhere",
    "description": "Right-click to highlight text in yellow",
    "version": "1.0",
    "permissions": ["activeTab", "contextMenus", "scripting", "storage"],
    "background": {
      "service_worker": "service-worker.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["sidebar.js", "content_script.js"],
        "css": ["sidebar.css"],
        "run_at": "document_idle"
      }
    ],
    "action": {
        "default_popup": "./Popup/popup.html",
        "default_icon": {
            "16": "./assets/icon16.png",
            "48": "./assets/icon48.png",
            "128": "./assets/icon128.png"
        }
    },
    "icons": {
      "16": "./assets/icon16.png",
      "48": "./assets/icon48.png",
      "128": "./assets/icon128.png"
    }
  }
  