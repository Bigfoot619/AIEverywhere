{
    "manifest_version": 3,
    "name": "AIEverywhere",
    "description": "Bigfoot's Extension",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "contextMenus",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script.js",
                "OpenAI/addComments.js",
                "OpenAI/improveEnglish.js",
                "Popup/popup.js",
                "Sidebar/sidebar.js"
            ],
            "css": [
                "Popup/popup.css",
                "Sidebar/sidebar.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "Popup/popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    }
}